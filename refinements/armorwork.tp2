BEGIN ~text -> short~

NO_LOG_RECORD

	COPY ~%LANGUAGE%/armor/human_readable/ident.tp2~ ~%LANGUAGE%/armor/ident.tp2~
	     ~%LANGUAGE%/armor/human_readable/unide.tp2~ ~%LANGUAGE%/armor/unide.tp2~
